<!DOCTYPE html>
<html>
<head>
  <title>Merchants</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
	<body>

    <div class="navbar navbar-default navbar-fixed-top">

      <div class="container">

        <div class="row body-header"> 
          <div class="col-xs-6">
            <div class="navbar-header" >
              <%= link_to image_tag('water.jpg', height: '35'), merchants_path, class: 'navbar-brand' %>
            </div> 
          </div>
          <div class="col-xs-6">
              <ul class="nav navbar-nav navbar-right"> 
                <% if logged_in? %>
                  <strong><%= link_to current_user.name, user_path(current_user) %></strong>  
                <% else %>
                  <%= link_to "Log In", login_path %> or
                  <%= link_to "Sign Up", new_user_path %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
    </div>

        
    <div class= "container" id="body-content">     

      <div class= "container">
        <% flash.each do |name, msg| %>
          <%= content_tag(:div, msg, class: 'alert alert-warning') %>
        <% end %>
      </div>


      <%= yield %>
    </div>

	</body>
</html>
