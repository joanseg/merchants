<div class="col-sm-6">
	<div class="row">
		<div class="col-sm-5">
			<%= show_image(meal) %>
		</div>
		<div class="col-sm-7"> 
			<%= form_for([current_order, current_order.line_items.new]) do |f| %>
<!-- 		f.label :quantity 
			f.number_field :quantity, class: 'form-control select'
 -->	
 				<%= f.select(:quantity, options_for_select([['0',0],['1',1],['2',2],['3',3],['4',4]],0)) %>
				<%= f.hidden_field :meal_id, :value => meal.id %>
				<%= f.submit 'Add', class: 'btn btn-primary btn-sm' %>
				<% end %>

			<ul> 
				<li><%= meal.body %></li>
				<li>Price: <%= meal.price %> GBP</li>
				<li><i>created <%= time_ago_in_words(meal.created_at) %> ago</i></li>
				<li><i> Orders to date: <%= meal.orders %> </i></li>
				<li><%= link_to("Edit", edit_merchant_meal_path(@merchant, meal)) %></li>
			</ul>
		</div>
	</div>
</div>