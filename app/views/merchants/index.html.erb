<div class="header" id="search-bar">
      <%= form_tag("/search", method: "get") do %>
        <%= label_tag(:q, "") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search") %>
      <% end %>
</div>

  <div class="row" id="row-header">
    <div class="col-sm-6">
      <h3 class="thin"> <%= pluralize(@merchants.count, 'Merchant') %> near you</h3>
    </div>

    <div class="col-sm-6">
      <button><%= link_to('Create new merchant', new_merchant_path) %></button>
    </div>
  </div>

<hr />
<%= render partial: "merchants", locals: { merchants: @merchants, caption: "" } %>

