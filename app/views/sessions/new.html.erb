<h3>Login</h3> 

<%= form_tag(login_path) do %>
	<p>
		<%= label_tag(:email) %>
	</p>
	<p>
		<%= text_field_tag(:email) %>
	</p>
	<p>
		<%= label_tag(:password) %>
	</p>
	<p>
		<%= text_field_tag(:password) %>
	</p>
	<p>
		<%= submit_tag("Log in") %>
	</p>

<% end %>
or <%= link_to "Sign Up", new_user_path %>