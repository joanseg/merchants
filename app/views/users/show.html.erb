<p><%= link_to 'Merchants near you', merchants_path %></p>

<h3>Profile</h3>

<table>
	<tr><td>Name:</td><td><%= @user.name %></td></tr>
	<tr><td>Email:</td><td><%= @user.email %></td></tr>
</table>

<h3>Order history:</h3>
<table border="1" >
  <thead>
  <tr>
     <th>Merchant</th>
     <th>Amount</th>
     <th>Sent on</th>
     <th>User</th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
  <tr>
     <td><%= order.merchant_id %></td>
     <td><%= order.other_amount %></td>
     <td><%= order.created_at %></td>
     <td><%= order.user_id %></td>
  </tr>
  <% end %>  
  </tbody>
</table>